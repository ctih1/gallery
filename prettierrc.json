{
    "trailingComma": "none",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": false,
    "printWidth": 100,
    "useTabs": true,
    "arrowParens": "avoid",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "svelteAllowShorthand": false,
    "svelteSortOrder": "options-scripts-markup-styles",
    "quoteProps": "as-needed",
    "plugins": [
        "prettier-plugin-organize-imports",
        "prettier-plugin-svelte",
        "prettier-plugin-tailwindcss"
    ],
    "overrides": [
        {
            "files": "*.svelte",
            "options": {
                "parser": "svelte"
            }
        }
    ]
}
